generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  STROKE
  SCOOTER
  HEAVYBIKE
}

model Resource {
  id String @default(uuid()) @id
  url String @unique
  name String
  created_at DateTime @default(now())

  descriptions MotorbikeDetails[]
  motorbikePictures MotorBikePictures[]
  variantDisplayPictures VariantDisplayPicture[]
  postThumbnails Post[]
}

model Model {
  id String @default(uuid()) @id
  name String
  description String

  motorbikes Motorbike[]
}

model MotorbikeDetails {
  id String @default(uuid()) @id
  title String
  detail String
  resource_id String?
  motorbike_id String

  resource Resource? @relation(fields: [resource_id], references: [id])
  motorbike Motorbike @relation(fields: [motorbike_id], references: [id])
}

model MotorBikePictures {
  resource_id String
  motorbike_id String

  resource Resource @relation(fields: [resource_id], references: [id])
  motorbike Motorbike @relation(fields: [motorbike_id], references: [id])

  @@id([resource_id, motorbike_id])
}

model Motorbike {
  id String @default(uuid()) @id
  name String
  category Category
  model_id String
  recommended_price String
  description String
  details MotorbikeDetails[]
  engineSpecs Json
  chassisSpecs Json
  sizeSpecs Json
  warrantySpecs Json
  gallery MotorBikePictures[]
  model Model @relation(fields: [model_id], references: [id])
  variants MotorbikeVariant[]
}

model MotorbikeVariant {
  id String @default(uuid()) @id
  motorbike_id String
  color String
  colorInHex String
  displayPictures VariantDisplayPicture[]

  motorbike Motorbike @relation(fields: [motorbike_id], references: [id])
}

model VariantDisplayPicture {
  resource_id String
  variant_id String

  resource Resource @relation(fields: [resource_id], references: [id])
  variant MotorbikeVariant @relation(fields: [variant_id], references: [id])

  @@id([resource_id, variant_id])
}

model Post {
  id String @default(uuid()) @id
  title String
  thumbnail_resource_id String 
  content String
  created_at DateTime
  modified_at DateTime
  views Int @default(0)

  thumbnail Resource @relation(fields: [thumbnail_resource_id], references: [id])
}